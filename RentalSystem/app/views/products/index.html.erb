<h1>PRODUCT MANAGER</h1>

<table style="productListing">
  <thead>
    <tr>
      <th style="color:white">Title</th>
      <th style="color:white">Price</th>
      <th style="color:white">Description</th>
      <th style="color:white">Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style="color:white"><%= product.title %></td>
        <td style="color:white"><%= product.price %></td>
        <td style="color:white"><%= product.description %></td>
        <td style="color:white"><%= product.available %></td>
        <td><%= link_to 'Show', product, :class => "btn btn-default" %>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-default" %>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
